#!/usr/bin/env bash

set -Eeuo

[ "${BASH_VERSINFO[0]}" -ge 3 ] && set -o pipefail

PLUGIN_DIR="$(dirname "${BASH_SOURCE[0]}")/.."

# shellcheck source=/dev/null
source "$PLUGIN_DIR/lib/helpers.sh"

# See https://github.com/asdf-vm/asdf/blob/master/docs/plugins-create.md#github-api-rate-limiting
function fetch() {
  curl --silent --fail --show-error --location ${GITHUB_API_TOKEN:+-H "Authorization: token ${GITHUB_API_TOKEN}"} "$@"
}

if [[ "${ASDF_INSTALL_TYPE:-version}" == 'ref' ]]; then
  echo >&2 "â›” This plugin does not support installing by ref."
  exit 1
fi

mkdir -p "${ASDF_DOWNLOAD_PATH}"

msg "Downloading GAM v${ASDF_INSTALL_VERSION}"

gam_release="$(get_filename)"

gam_download="gam-$(get_extension)"

url="https://github.com/GAM-team/GAM/releases/download/v${ASDF_INSTALL_VERSION}/${gam_release}"

msg "Using URL $url"

fetch \
  "$url" \
  -o "${ASDF_DOWNLOAD_PATH}/${gam_download}"

(
  cd "${ASDF_DOWNLOAD_PATH}"
  tar xf "${gam_download}"
)
